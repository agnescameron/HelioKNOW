---
---

[
  {% for tool in site.tools %}
    {

      "title"    : "{{ tool.title | escape }}",
      "url"      : "{{ site.baseurl }}{{ tool.url }}",
      "category" : "{{ tool.category }}",
      "tags"     : "{{ tool.tags | join: ', ' }}",
      "date"     : "{{ tool.date }}",
      "content"  : "{{ tool.content | strip_html | strip_newlines }}"

    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]